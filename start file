#!/bin/bash

echo "ğŸ”§ Starting Jenkins service..."

# Check if Jenkins is installed
if ! systemctl list-unit-files | grep -q jenkins.service; then
  echo "âŒ Jenkins is not installed or not registered as a service."
  exit 1
fi

# Reset failed state (optional but useful)
sudo systemctl reset-failed jenkins

# Start Jenkins
sudo systemctl start jenkins

# Check service status
if systemctl is-active --quiet jenkins; then
  echo "âœ… Jenkins started successfully!"
else
  echo "âŒ Failed to start Jenkins. Fetching logs..."
  sudo systemctl status jenkins --no-pager
  echo -e "\nğŸ“ Recent logs:"
  sudo journalctl -xeu jenkins.service --no-pager | tail -n 30
  exit 1
fi
